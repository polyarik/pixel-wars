{
  "compilerOptions": {
    "incremental": true,
    "module": "commonjs",
    "target": "es6",

    "outDir": "./dist",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["./node_modules"]
}
